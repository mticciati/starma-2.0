<%= render '/shared/errors', obj: @current_user %>

<%= form_for current_user, html: { multipart: true } do |f| %>

<div class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location, placeholder: "i.e. San Francisco, CA", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :avatar %>
  <%= image_tag(current_user.avatar.thumb, alt: current_user.username, class: "img-circle") if current_user.avatar? %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
</div>

<div class="form-group">
  <%= f.submit "Submit", class: "btn btn-primary" %>
</div>

<% end %>

<%= link_to "Cancel", user_path(current_user) %>