<h2>Users</h2>

<%= will_paginate %>

<% users.each do |u| %>
  <div class="user-block">
    <div class="profile-thumb">
       <%= image_tag(u.avatar.thumb, alt: u.username, class: "img-circle") %>
    </div>
    <p><%= link_to u.username, user_path(u) %></p>
    <p>
      <%= form_for(Favorite.new) do |f| %>
        <%= f.hidden_field :favorite_user_id, value: u.id %>
        <%= f.submit "Add to Favorites", class: "btn btn-primary" %>
      <% end %>
    </p>
    <% if admin? %>
      <p class="alert-danger">
        <%= link_to "Destroy", user_path(u), :method => :delete, 
         data: { confirm: "Are you sure you want to delete this user?" } %>
     </p>
    <% end %>
  </div>

<% end %>

<%= will_paginate %>

