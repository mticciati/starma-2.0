<div class="container-fluid">
  <div class="row text-center">
    <div class="container">
      <div class="col-12">
        <h1>Inbox</h1>
      </div>
    </div>
  </div>

  <div class="row text-center">
    <div class="container">
      <div class="col-md-6">
        <%= render 'conversations', conversations: @conversations %>
      </div>
  
      <div class="col-md-5 msg-area">
        <h2 class="msg-area-title">New Message</h2>
        <input type="text" class="form-control" id="to_user" placeholder="Who are you messaging?"></input>
        <br/>
        <%= render 'message', message: @message %>
      </div>
    </div>
  </div>
</div>